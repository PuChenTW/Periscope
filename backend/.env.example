# Application Settings
DEBUG=false

# Database Configuration
# Use __ (double underscore) as delimiter for nested config groups
DATABASE__URL=postgresql+asyncpg://periscope:periscope_dev@localhost:5432/periscope

# Security Configuration
SECURITY__SECRET_KEY=your_secret_key_here
SECURITY__JWT_EXPIRE_MINUTES=30

# Email Configuration
EMAIL__PROVIDER=smtp
EMAIL__API_KEY=your_email_api_key_here
EMAIL__SMTP_HOST=localhost
EMAIL__SMTP_PORT=587
EMAIL__SMTP_USERNAME=your_smtp_username
EMAIL__SMTP_PASSWORD=your_smtp_password

# Cache Configuration
CACHE__TTL_MINUTES=60

# Redis Configuration
REDIS__URL=redis://localhost:6379/0
REDIS__MAX_CONNECTIONS=10

# AI Configuration
AI__PROVIDER=gemini
AI__GEMINI_API_KEY=your_gemini_api_key_here
AI__GEMINI_MODEL=gemini-2.5-flash-lite
AI__OPENAI_API_KEY=your_openai_api_key_here
AI__OPENAI_MODEL=gpt-5-nano

# RSS Configuration
RSS__FETCH_TIMEOUT=30
RSS__MAX_RETRIES=3
RSS__RETRY_DELAY=1.0
RSS__MAX_ARTICLES_PER_FEED=100
RSS__USER_AGENT=Periscope-Bot/1.0 (+https://periscope.ai/bot)

# Similarity Detection Configuration
SIMILARITY__THRESHOLD=0.7
SIMILARITY__CACHE_TTL_MINUTES=1440
SIMILARITY__BATCH_SIZE=10

# Topic Extraction Configuration
TOPIC_EXTRACTION__MAX_TOPICS=5

# Summarization Configuration
SUMMARIZATION__MAX_LENGTH=500
SUMMARIZATION__CONTENT_LENGTH=2000

# Custom Prompt Validation Configuration
CUSTOM_PROMPT__MAX_LENGTH=1000
CUSTOM_PROMPT__MIN_LENGTH=10
CUSTOM_PROMPT__VALIDATION_ENABLED=true

# AI Prompt Validation Configuration
AI_VALIDATION__ENABLED=true
AI_VALIDATION__THRESHOLD=0.8
AI_VALIDATION__CACHE_TTL_MINUTES=1440

# Content Normalization Configuration
CONTENT__MIN_LENGTH=100
CONTENT__MAX_LENGTH=50000
CONTENT__SPAM_DETECTION_ENABLED=true
CONTENT__TITLE_MAX_LENGTH=500
CONTENT__AUTHOR_MAX_LENGTH=100
CONTENT__TAG_MAX_LENGTH=50
CONTENT__MAX_TAGS_PER_ARTICLE=20
CONTENT__QUALITY_SCORING_ENABLED=true
